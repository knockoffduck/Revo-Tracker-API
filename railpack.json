{
    "$schema": "https://schema.railpack.com",
    "steps": {
        "install": {
            "commands": [
                "bun i"
            ]
        },
        "build": {
            "inputs": [
                {
                    "step": "install"
                }
            ],
            "commands": [
                "bun run build"
            ]
        }
    },
    "deploy": {
        "startCommand": "bun dist/index.js"
    }
}